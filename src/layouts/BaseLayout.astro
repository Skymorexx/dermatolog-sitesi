---
import SEOMeta from '../components/SEOMeta.astro';
import TopBar from '../components/TopBar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyButton from '../components/StickyButton.astro';
import CookieBanner from '../components/CookieBanner.astro'; // CookieBanner import
import JsonLD from '../components/JsonLD.astro';

const { title, description, image, url, type } = Astro.props;

// Varsayılan değerler
const pageTitle = title;
const pageDescription = description;
const pageImage = image || '/images/default-og-image.jpg';
const pageUrl = url || `https://drumutmertyildirim.com${Astro.url.pathname}`;
const pageType = type || 'website';
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": "https://drumutmertyildirim.com/#website",
  "url": "https://drumutmertyildirim.com",
  "name": "Uzm. Dr. Umut Mert Yıldırım - Dermatoloji Uzmanı",
  "alternateName": "Dr. Umut Mert Yıldırım",
  "description": "İstanbulda dermatoloji uzmanı; Deri hastalıkları, dermokozmetik uygulamalar ve dermocerrahi konularında uzman hekim hizmeti.",
  "publisher": {
    "@id": "https://drumutmertyildirim.com/#organization"
  }
};
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": "https://drumutmertyildirim.com/#organization",
  "name": "Uzm. Dr. Umut Mert Yıldırım - Dermatoloji Uzmanı",
  "url": "https://drumutmertyildirim.com",
  "logo": {
    "@type": "ImageObject",
    "url": "https://drumutmertyildirim.com/images/logo.png",
    "width": 120,
    "height": 120
  },
  "sameAs": [
    "https://www.instagram.com/uzm.dr.umutmertyildirim/",
    "https://wa.me/900000000000",
    "https://www.facebook.com/dr.umutmertyildirim"
  ]
};
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    
    <!-- SEO Meta Bileşeni -->
    <SEOMeta 
      title={pageTitle}
      description={pageDescription}
      image={pageImage}
      url={pageUrl}
      type={pageType}
    />
    
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">
      Ana içeriğe atla
    </a>
    
    <!-- TopBar bileşeni -->
    <TopBar />
    
    <!-- Header bileşeni -->
    <Header />
    
    <main id="main-content">
      <slot />
    </main>
    
    <!-- Footer bileşeni -->
    <Footer />
    
    <!-- Sticky Randevu Butonu -->
    <StickyButton />
    
    <!-- Cookie Banner -->
    <CookieBanner />
    
    <style>
      .skip-link {
        position: absolute;
        top: -40px;
        left: 6px;
        background: #005A8D;
        color: white;
        padding: 8px;
        text-decoration: none;
        border-radius: 4px;
        z-index: 1000;
        transition: top 0.3s;
      }
      
      .skip-link:focus {
        top: 6px;
      }
    </style>
  </body>
</html>