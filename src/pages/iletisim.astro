---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "İletişim - Uzm. Dr. Umut Mert Yıldırım";
const description = "İletişim bilgilerimiz ve randevu talebiniz için iletişim formu. Bize ulaşın!";
---

<BaseLayout title={title} description={description}>
  
  <main id="main-content" class="py-12 px-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-primary mb-8">İletişim</h1>
      
      <!-- İletişim Formu -->
      <section class="mb-16">
        <form 
          name="contact" 
          method="POST" 
          data-netlify="true" 
          data-netlify-recaptcha="true"
          action="/tesekkurler/"
          netlify-honeypot="bot-field"
          class="bg-white p-8 rounded-lg shadow-md border border-gray-100"
        >
          <input type="hidden" name="form-name" value="contact" />
          
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="ad" class="block text-text-primary font-medium mb-2">Ad Soyad *</label>
              <input 
                type="text" 
                id="ad" 
                name="ad" 
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="email" class="block text-text-primary font-medium mb-2">E-posta *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
            </div>
          </div>
          
          <div class="mb-6">
            <label for="telefon" class="block text-text-primary font-medium mb-2">Telefon</label>
            <input 
              type="tel" 
              id="telefon" 
              name="telefon" 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
            />
          </div>
          
          <div class="mb-6">
            <label for="mesaj" class="block text-text-primary font-medium mb-2">Mesajınız *</label>
            <textarea 
              id="mesaj" 
              name="mesaj" 
              rows="5" 
              required 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
            ></textarea>
          </div>
          
          <div class="mb-6">
            <div class="flex items-start">
              <input 
                type="checkbox" 
                id="kvkk" 
                name="kvkk" 
                required 
                class="mt-1 mr-3 h-5 w-5 text-accent rounded focus:ring-secondary"
              />
              <label for="kvkk" class="text-text-primary">
                <span class="font-medium">KVKK Aydınlatma Metni</span>'ni okudum ve kişisel verilerimin işlenmesini kabul ediyorum. *
              </label>
            </div>
          </div>
          
          <!-- reCAPTCHA Kutusu -->
          <div data-netlify-recaptcha="true" class="mb-6"></div>
          
          <button 
            type="submit" 
            class="bg-accent hover:bg-orange-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-300"
          >
            Mesaj Gönder
          </button>
        </form>
      </section>
      
      <!-- Alternatif İletişim Yöntemleri -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-primary mb-6">Alternatif İletişim Yöntemleri</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-background-soft p-6 rounded-lg text-center">
            <h3 class="font-semibold text-text-primary mb-3">Telefon</h3>
            <a href="tel:+9000000000" class="text-primary hover:text-secondary transition-colors duration-300 text-xl font-medium">
              +90 (000) 000 00 00
            </a>
          </div>
          
          <div class="bg-background-soft p-6 rounded-lg text-center">
            <h3 class="font-semibold text-text-primary mb-3">WhatsApp</h3>
            <a 
              href="https://wa.me/901234567890" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-primary hover:text-secondary transition-colors duration-300 text-xl font-medium"
            >
              WhatsApp ile Yaz
            </a>
          </div>
          
          <div class="bg-background-soft p-6 rounded-lg text-center">
            <h3 class="font-semibold text-text-primary mb-3">E-posta</h3>
            <a 
              href="mailto:info@drumutmertyildirim.com" 
              class="text-primary hover:text-secondary transition-colors duration-300 text-xl font-medium"
            >
              info@drumutmertyildirim.com
            </a>
          </div>
        </div>
      </section>
      
      <!-- Adres ve Çalışma Saatleri -->
      <section>
        <h2 class="text-2xl font-bold text-primary mb-6">Adres ve Çalışma Saatleri</h2>
        
        <div class="bg-white p-8 rounded-lg shadow-md border border-gray-100">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-4">Adres</h3>
              <p class="text-text-secondary leading-relaxed">
                Medipol Acıbadem Bölge Hastanesi<br />
                Acıbadem, Şht. Emin Çölen Sokağı No:18<br />
                34718<br />
                Kadıköy/İstanbul
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-4">Çalışma Saatleri</h3>
              <ul class="text-text-secondary space-y-2">
                <li class="flex justify-between">
                  <span>Pazartesi - Cuma:</span>
                  <span>08:30 - 17:30</span>
                </li>
                <li class="flex justify-between">
                  <span>Cumartesi:</span>
                  <span>08:30 - 14:00</span>
                </li>
                <li class="flex justify-between">
                  <span>Pazar:</span>
                  <span>Kapalı</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
  
</BaseLayout>