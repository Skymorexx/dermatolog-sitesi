---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HastalikKarti from '../../components/HastalikKarti.astro';

const title = "Deri Hastalıkları - Uzm. Dr. Umut Mert Yıldırım";
const description = "En yaygın deri hastalıkları hakkında detaylı bilgi, belirtiler, teşhis ve tedavi yöntemleri. Akne, egzama, sedef hastalığı, vitiligo ve daha fazlası.";
---

<BaseLayout title={title} description={description}>
  
  <main id="main-content" class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto mb-12 text-center">
      <h1 class="text-4xl font-bold text-primary mb-6">
        Deri Hastalıkları
      </h1>
      <p class="text-text-primary text-lg leading-relaxed">
        Deri hastalıkları, insanların yaşam kalitesini önemli ölçüde etkileyebilen yaygın sağlık sorunlarıdır. 
        Bu bölümde, en çok görülen deri hastalıkları hakkında detaylı bilgi, belirtiler, teşhis yöntemleri 
        ve modern tedavi seçenekleri hakkında bilgi edinebilirsiniz.
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <HastalikKarti 
        title="Akne (Sivilce)"
        linkUrl="/deri-hastaliklari/akne/"
        imageUrl="/images/hastaliklar/akne.jpg"
      />
      
      <HastalikKarti 
        title="Egzema"
        linkUrl="/deri-hastaliklari/egzema/"
        imageUrl="/images/hastaliklar/egzema.jpg"
      />
      
      <HastalikKarti 
        title="Sedef Hastalığı"
        linkUrl="/deri-hastaliklari/sedef/"
        imageUrl="/images/hastaliklar/sedef.jpg"
      />
      
      <HastalikKarti 
        title="Saç Dökülmesi"
        linkUrl="/deri-hastaliklari/sac-dokulmesi/"
        imageUrl="/images/hastaliklar/sac-dokulmesi.jpg"
      />

      <HastalikKarti 
        title="Vitiligo"
        linkUrl="/deri-hastaliklari/vitiligo/"
        imageUrl="/images/hastaliklar/vitiligo.jpg"
      />
      <HastalikKarti 
        title="Rozase (Gül Hastalığı)"
        linkUrl="/deri-hastaliklari/rozase/"
        imageUrl="/images/hastaliklar/rozase.jpg"
      />
      <HastalikKarti 
        title="Liken Planus"
        linkUrl="/deri-hastaliklari/liken/"
        imageUrl="/images/hastaliklar/liken.jpg"
      />
      <HastalikKarti 
        title="Ürtiker (Kurdeşen)"
        linkUrl="/deri-hastaliklari/urtiker/"
        imageUrl="/images/hastaliklar/urtiker.jpg"
      />
      <HastalikKarti 
        title="Cilt Mantarı"
        linkUrl="/deri-hastaliklari/vitiligo/"
        imageUrl="/images/hastaliklar/vitiligo.jpg"
      />
      <HastalikKarti 
        title="Herpes (Uçuk) Hastalığı"
        linkUrl="/deri-hastaliklari/Herpes/"
        imageUrl="/images/hastaliklar/vitiligo.jpg"
      />
    </div>
  </main>
  
</BaseLayout>