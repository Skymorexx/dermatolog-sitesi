---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HastalikKarti from '../../components/HastalikKarti.astro';
// Resim importları
import KategoriAkne from '../../assets/images/hastaliklar/akne.jpg';
import KategoriEgzema from '../../assets/images/hastaliklar/egzema.jpg';
import KategoriSedef from '../../assets/images/hastaliklar/sedef.jpg';
import KategoriSac from '../../assets/images/hastaliklar/sac-dokulmesi.jpg';
import KategoriVitiligo from '../../assets/images/hastaliklar/vitiligo.jpg';
import KategoriRozase from '../../assets/images/hastaliklar/rozase.jpg';
import KategoriUrtiker from '../../assets/images/hastaliklar/urtiker.jpg';
import KategoriHerpes from '../../assets/images/hastaliklar/herpes.jpg';
import KategoriMantar from '../../assets/images/hastaliklar/mantar.jpg';

const title = "Deri Hastalıkları - Uzm. Dr. Umut Mert Yıldırım";
const description = "En yaygın deri hastalıkları hakkında detaylı bilgi, belirtiler, teşhis ve tedavi yöntemleri. Akne, egzama, sedef hastalığı, vitiligo ve daha fazlası.";
---

<BaseLayout title={title} description={description}>
  
  <main id="main-content" class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto mb-12 text-center">
      <h1 class="text-4xl font-bold text-primary mb-6">
        Deri Hastalıkları
      </h1>
      <p class="text-text-primary text-lg leading-relaxed">
        Deri hastalıkları, insanların yaşam kalitesini önemli ölçüde etkileyebilen yaygın sağlık sorunlarıdır. 
        Bu bölümde, en çok görülen deri hastalıkları hakkında detaylı bilgi, belirtiler, teşhis yöntemleri 
        ve modern tedavi seçenekleri hakkında bilgi edinebilirsiniz.
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <HastalikKarti 
        title="Akne (Sivilce)"
        linkUrl="/deri-hastaliklari/akne/"
        imageUrl={KategoriAkne}
      />
      
      <HastalikKarti 
        title="Egzema"
        linkUrl="/deri-hastaliklari/egzema/"
        imageUrl={KategoriEgzema}
      />
      
      <HastalikKarti 
        title="Sedef Hastalığı"
        linkUrl="/deri-hastaliklari/sedef/"
        imageUrl={KategoriSedef}
      />
      
      <HastalikKarti 
        title="Saç Dökülmesi"
        linkUrl="/deri-hastaliklari/sac-dokulmesi/"
        imageUrl={KategoriSac}
      />

      <HastalikKarti 
        title="Vitiligo"
        linkUrl="/deri-hastaliklari/vitiligo/"
        imageUrl={KategoriVitiligo}
      />
      <HastalikKarti 
        title="Rozase (Gül Hastalığı)"
        linkUrl="/deri-hastaliklari/rozase/"
        imageUrl={KategoriRozase}
      />
      <HastalikKarti 
        title="Ürtiker (Kurdeşen)"
        linkUrl="/deri-hastaliklari/urtiker/"
        imageUrl={KategoriUrtiker}
      />
      <HastalikKarti 
        title="Cilt Mantarı"
        linkUrl="/deri-hastaliklari/vitiligo/"
        imageUrl={KategoriMantar}
      />
      <HastalikKarti 
        title="Herpes (Uçuk) Hastalığı"
        linkUrl="/deri-hastaliklari/Herpes/"
        imageUrl={KategoriHerpes}
      />
    </div>
  </main>
  
</BaseLayout>