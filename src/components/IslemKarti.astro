---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  linkUrl: string;
  imageUrl: ImageMetadata;
}

const { title, linkUrl, imageUrl } = Astro.props;
---

<a 
  href={linkUrl} 
  class="block bg-white rounded-lg shadow-md overflow-hidden border border-gray-100 transition-all duration-300 hover:shadow-xl"
>
  <Image 
    src={imageUrl} 
    alt={title}
    widths={[240, 540, 720]}
    sizes="(max-width: 768px) 100vw, 33vw"
    loading="lazy"
    class="w-full h-48 object-cover"
  />
  
  <div class="p-6">
    <h3 class="text-lg font-semibold text-primary text-center">
      {title}
    </h3>
  </div>
</a>