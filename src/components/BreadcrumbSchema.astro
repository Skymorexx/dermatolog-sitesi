---
interface Link {
  name: string;
  url: string;
}

interface Props {
  links: Link[];
}

const { links } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": links.map((link, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": link.name,
    "item": new URL(link.url, Astro.site).href
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />