---
interface FaqItem {
  question: string;
  answer: string;
}

interface Props {
  questions: FaqItem[];
}

const { questions } = Astro.props;

if (!questions || questions.length === 0) {
  return null;
}

const schema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": questions.map((item, index) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />